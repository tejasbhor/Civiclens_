# CivicLens Environment Configuration
# Copy this file to .env and update with your values

# Database
POSTGRES_PASSWORD=your_secure_postgres_password
DATABASE_URL=postgresql://civiclens:your_secure_postgres_password@localhost:5432/civiclens

# Redis
REDIS_PASSWORD=your_secure_redis_password
REDIS_URL=redis://:your_secure_redis_password@localhost:6379/0

# Security
SECRET_KEY=your_very_long_and_random_secret_key_change_this_in_production
ALGORITHM=HS256

# MinIO Object Storage
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=civiclens-media
MINIO_USE_SSL=false

# Application
APP_NAME=CivicLens API
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false
CITY_CODE=RNC

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Token Expiry (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=1440
ADMIN_TOKEN_EXPIRE_HOURS=8
REFRESH_TOKEN_EXPIRE_DAYS=30

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_OTP=3/hour
RATE_LIMIT_LOGIN=5/15minutes
RATE_LIMIT_PASSWORD_RESET=3/hour

# Security Features
TWO_FA_ENABLED=true
SESSION_FINGERPRINT_ENABLED=true
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
ALLOWED_VIDEO_TYPES=video/mp4,video/webm

# Database Connection Pool
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365

# Frontend URLs (for Docker deployment)
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
VITE_API_URL=http://localhost:8000/api/v1
