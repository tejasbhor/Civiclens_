{
  "expo": {
    "name": "CivicLens",
    "slug": "civiclens-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.civiclens.mobile",
      "infoPlist": {
        "NSCameraUsageDescription": "CivicLens needs access to your camera to capture photos of civic issues.",
        "NSLocationWhenInUseUsageDescription": "CivicLens needs your location to tag civic issues accurately.",
        "NSPhotoLibraryUsageDescription": "CivicLens needs access to your photo library to attach images to reports."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.civiclens.mobile",
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow CivicLens to access your camera to capture photos of civic issues."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow CivicLens to use your location to tag civic issues accurately."
        }
      ],
      "expo-font"
    ],
    "extra": {
      "eas": {
        "projectId": "bdb3ad70-019a-46a2-98db-0bf94b39b5c0"
      }
    }
  }
}
