# CivicLens v2.0 - Docker Environment Variables
# Copy this file to .env and update with your values

# PostgreSQL
POSTGRES_PASSWORD=your_secure_postgres_password_here

# Redis
REDIS_PASSWORD=your_secure_redis_password_here

# MinIO
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your_secure_minio_password_here

# Application
SECRET_KEY=your_super_secret_key_min_32_characters_long_change_this
APP_VERSION=2.0.0
CITY_CODE=RNC
ENVIRONMENT=production
DEBUG=false

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Optional: SMTP Configuration (for email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@civiclens.gov.in

# Optional: SMS Configuration (for OTP)
SMS_PROVIDER=twilio
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_api_secret
SMS_SENDER_ID=CIVICLENS
